extends ../user_layout.jade

block contents
    div
        h1 List Ingredient Kaokang
    
    div
        ค้นหา 
        input(class="search_in" type="text" placeholder="ค้นหาวัตถุดิบ" val="")
    br
    div(class="show_ingredient")
        table  
            tr
                th no.
                th ชื่อวัตถุดิบ
                th ราคาต่อหน่วย
                th หน่วย
                th
            - for(var i = 0 ; i < data.length ; i+= 1){
                tr
                    td= i+1 +". "
                    td= data[i]["n_rawmaterial"]
                    td= data[i]["price_perunit"]
                    td= data[i]["unit"]
                    td(class="edit" dir=data[i]["n_rawmaterial"]) edit
            -}
    div
        br
        br
        button(class="add_raw") เพิ่มรายการวัตถุดิบ
        button(class="cancel") ยกเลิกรายการ
    